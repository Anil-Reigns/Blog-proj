
<form action="" method="post" id="c_form">
    <pre>create your blog</pre>
    <div id="f_cont">
        <div id="c1">
            <label for="title">Blog title :</label><input class="inp" type="text"  required name="contents[title]" id="title"><br>
        </div>
        <div id="c2">
            <label for="blog">Description :</label><br><input id="blog" type="text-area"  required name="contents[blog]" id="blog">
        </div>
        <div>
        <label for="category">Category :</label><br><input id="category" type="text"  required name="contents[category]" id="category">
        </div>
        <div id="c3">
            <label for="author">Enter your name :</label><input type="text" class="inp" required name="contents[author]" id="author">
            <label for="references">References :</label><input type="text" class="inp" required name="contents[references]" id="references"><br>
            <input type="number" value="<%= @l_id %>" name="contents[blogid]" style="display: none;">
        </div>
        <div id="c4">
            <button type="submit">Create</button>
        </div>
    </div>

</form>